<script>
var lefttimeFlag = 0;    // 0: left 1: margin
$(document).ready( function () {
	// swap time-left display
	var swapTimeLeft = function () {
		if( lefttimeFlag == 0 ){
			// timeleft -> margin
			$('#timeleft').hide();
			$('#timemargin').show();
			lefttimeFlag = 1;
		}
		else{
			// margin -> timeleft
			$('#timeleft').show();
			$('#timemargin').hide();
			lefttimeFlag = 0;
		}
	};
	$('#timeleft').click( swapTimeLeft );
	$('#timemargin').click( swapTimeLeft );
} );
</script>
