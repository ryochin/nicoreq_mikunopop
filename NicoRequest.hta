			<input type="checkbox" id="logoffCheck" checked=false onclick="checklogoffCheck()"><label for="logoffCheck">30分強制ログアウト</label>
<!--add end-->
		</fieldset>
		</div>
<!--add start-->
		<div id="dummyAdmin">
		<fieldset>
			<legend>副管理者</legend>
			<input type="checkbox" id="dummyAdminCmtCheck" onclick="dummyAdminCmtChg()"><label for="dummyAdminCmtCheck">コメントを受け付ける</label>
			<input id="dummyAdminID" type="text" size="32" value=""
			 onchange="var e=document.getElementById;if(this.value==''){e('dummyAdminCmtCheck').checked=false;e('dummyAdminCmdCheck').checked=false;}"><br>
			<input type="checkbox" id="dummyAdminCmdCheck" onclick="dummyAdminCmdChg()"><label for="dummyAdminCmdCheck">コマンドを受け付ける</label>
		</fieldset>
		</div>
<!--add end-->
	</div>
</div>
